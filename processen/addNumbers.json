{
  "id": "Add",
  "title": "Add 2 numbers",
  "description": "Using a bash script, add the 2 provided numbers together. Either sync or async.",
  "version": "0.0.1",
  "jobControlOptions": ["sync-execute", "async-execute"],
  "outputTransmission": ["value", "reference"],
  "inputs": {
    "number1": {
      "title": "Number 1 Literal Input",
      "description": "A number literal input.",
      "schema": {
        "type": "number",
        "format": "integer"
      }
    },
    "number2": {
      "title": "Number 2 Literal Input",
      "description": "A number literal input. This number can't be zero",
      "schema": {
        "type": "number",
        "format": "integer"
      }
    }
  },
  "outputs": {
    "sum": {
      "title": "Addition of 2 numbers",
      "description": "A number literal output.",
      "schema": {
        "type": "number",
        "format": "integer"
      }
    }
  },
  "subscriber": {
    "successUri": ":serviceUrl/callback/:jobId?type=success",
    "inProgressUri": ":serviceUrl/callback/:jobId?type=inProgress",
    "failedUri": ":serviceUrl/callback/:jobId?type=failed"
  }
}
