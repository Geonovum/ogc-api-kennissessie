                        "application/geo+json": {
                            "schema": {
                                "$ref": "#/components/schemas/featureGeoJson_{{:collectionId}}"
                            }
                        },
                        "text/html": {
                            "schema": {
                                "$ref": "#/components/schemas/htmlSchema"
                            }
                        }
                    }
