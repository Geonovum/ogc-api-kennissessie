extends layout.pug

block content

  h1 Metadata about the feature collections
  h2 Collections

  each collection in json.collections

    h3 #{collection.title}
    p #{collection.description}
    h4 Links for the collection
      each link in collection.links
        p #{link.rel} = 
          a(href= link.href)  #{link.title} 
          | (#{link.type})
  h2 Links
  each link in json.links
    p #{link.rel} = 
      a(href= link.href)  #{link.title} 
      | (#{link.type})
  h2 JSON output
  p Get raw 
    - var href = json.links.filter(l => l.rel === 'self')[0].href
    a(href= href) JSON
  .jsonContainer
    .renderjson
      pre !{JSON.stringify(json, null, 1)}
